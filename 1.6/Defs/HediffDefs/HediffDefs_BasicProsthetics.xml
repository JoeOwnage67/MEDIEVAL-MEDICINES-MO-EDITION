<!--  Added body parts  -->
<!-- Iron Arm -->
<HediffDef ParentName="addedPartBasic">
	<defName>IronArm</defName>
	<label>metallic arm</label>
	<labelNoun>a metallic arm</labelNoun>
	<description>An installed metallic arm.</description>
	<descriptionHyperlinks>
		<ThingDef>IronArm</ThingDef>
	</descriptionHyperlinks>
	<spawnThingOnRemoved>IronArm</spawnThingOnRemoved>
	<addedPartProps>
		<solid>true</solid>
		<partEfficiency>0.50</partEfficiency>							
	</addedPartProps>
	<comps>
		<li Class="HediffCompProperties_VerbGiver">
			<tools>
				<li>
					<label>iron fist</label>
					<capacities>
						<li>Blunt</li>
					</capacities>
					<power>10</power>
					<cooldownTime>1.8</cooldownTime>
				</li>
			</tools>
		</li>
	</comps>
</HediffDef>
	
