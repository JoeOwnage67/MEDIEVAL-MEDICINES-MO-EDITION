<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    
	  <!--Lesser Mana Potion -->  
  <RecipeDef MayRequire="Ludeon.RimWorld.Royalty">
    <defName>Joe_LesserManaRecipe</defName>
    <label>Make Lesser Mana Potion</label>
    <description>A vial containing a Tribal Lesser Mana Elixir that restores a small amount of mana, and doubles the speed of arcane load dispersal. Infused with the essence of the Aether Bloom, it has a vibrant blue hue.</description>
    <jobString>Making Lesser Mana Potion.</jobString>
	<workSkill>Intellectual</workSkill>
	<skillRequirements>
    	<Intellectual>3</Intellectual>
    </skillRequirements>
  	<workAmount>700</workAmount>
	<soundWorking>Recipe_Brewing</soundWorking>
	<allowMixingIngredients>true</allowMixingIngredients>
	<targetCountAdjustment>1</targetCountAdjustment>
	<workSkillLearnFactor>1</workSkillLearnFactor>  
	<workSpeedStat>DrugSynthesisSpeed</workSpeedStat>  
		<ingredients>
			 <li>
			 	<filter>
			    	<thingDefs>
           				<li>DankPyon_RawAether</li>
					</thingDefs>
			 	</filter>
			 	<count>2</count>
			 </li>
	       	 <li>
         		<filter>
          			<thingDefs>
             			<li>RawBerries</li>
						<li MayRequire="pphhyy.GuldenNew">GuldenRawBerries</li>
           			</thingDefs>
         		</filter>
        		<count>10</count>
       		</li>
			<li>
         		<filter>
          			<thingDefs>
             			<li>DankPyon_RawHerb</li>
           			</thingDefs>
         		</filter>
        		<count>2</count>
       		</li>
		</ingredients>
    	<products>
      		<Joe_LesserManaPotion>1</Joe_LesserManaPotion>
    	</products>
   		<fixedIngredientFilter>			
			<thingDefs>
				<li>RawBerries</li>
				<li>DankPyon_RawHerb</li>	
				<li>DankPyon_RawAether</li>											
				<li MayRequire="pphhyy.GuldenNew">GuldenRawBerries</li>
			</thingDefs>
		</fixedIngredientFilter>    	
		<recipeUsers>
			<li>CraftingSpot</li>
			<li>DrugLab</li>
			<li>DankPyon_AlchemyBench</li>
		</recipeUsers>	
	</RecipeDef>

