<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- minor healing potion -->
	<ThingDef ParentName="MakeableDrugBase">
    	<defName>MinorHealingPotion</defName>
    	<label>Minor Healing Potion</label>
    	<description>Noble house apothecaries, through their refined techniques, have transformed the tribal lesser healing elixir into what is now known as the minor healing potion. By incorporating amber into the recipe, this new concoction boasts enhanced restorative abilities while significantly reducing the adverse effects previously experienced.</description>
	    <descriptionHyperlinks>
      		<HediffDef>MinorHealingPotionEffect</HediffDef>
    	</descriptionHyperlinks>
	    <graphicData>
    		<texPath>MediumHealingPotionText</texPath>
      		<graphicClass>Graphic_StackCount</graphicClass>
	    	<drawSize>1</drawSize>
    	</graphicData>
	    <rotatable>false</rotatable>
	    <statBases>
    		<WorkToMake>1000</WorkToMake>
      		<MarketValue>175</MarketValue>
      		<SellPriceFactor>0.30</SellPriceFactor>
      		<Mass>0.01</Mass>
    	</statBases>
		<techLevel>Neolithic</techLevel>
        <ingestible>
    		<drugCategory>Medical</drugCategory>
      		<foodType>Processed, Fluid</foodType>
      		<outcomeDoers>
        		<li Class="IngestionOutcomeDoer_GiveHediff">
          			<hediffDef>MediumHealingPotionEffect</hediffDef>
          			<severity>1.0</severity>
        		</li>
      		</outcomeDoers>
    	</ingestible>	 
 		<recipeMaker>
      		<workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
      		<workSkill>Intellectual</workSkill>
      		<researchPrerequisite>DankPyon_Alchemy</researchPrerequisite>
      		<recipeUsers>
	        	<li>DrugLab</li>
				<li>DankPyon_AlchemyBench</li>
      		</recipeUsers>
      		<soundWorking>Recipe_Drug</soundWorking>
      		<skillRequirements>
        		<Intellectual>6</Intellectual>
      		</skillRequirements>
    	</recipeMaker>
    	<costList>
			<LesserHealingPotion>1</LesserHealingPotion>
			<DankPyon_Amber>2</DankPyon_Amber>
    	</costList>
		<comps>
      		<li Class="CompProperties_Drug">
        		<listOrder>120</listOrder>
      		</li>
    	</comps>    
	</ThingDef>
  
   <!-- Drug Effect -->

	<HediffDef>
	  	<defName>MinorHealingPotionEffect</defName>
	    <hediffClass>Hediff_High</hediffClass>
	    <label>Minor Healing Potion Effect</label>
	    <labelNoun>Minor Healing Potion Effect</labelNoun>
	    <description>Noble house apothecaries, through their refined techniques, have transformed the tribal lesser healing elixir into what is now known as the minor healing potion. By incorporating amber into the recipe, this new concoction boasts enhanced restorative abilities while significantly reducing the adverse effects previously experienced.</description>
	    <defaultLabelColor>(1,0,0.5)</defaultLabelColor>
	    <scenarioCanAdd>true</scenarioCanAdd>
	    <maxSeverity>1.0</maxSeverity>
	    <isBad>false</isBad>
	    <comps>
	    	<li Class="HediffCompProperties_SeverityPerDay">
	        	<severityPerDay>-4</severityPerDay>
	        	<showHoursToRecover>true</showHoursToRecover>
	      	</li>
	    </comps>
	    <stages>
		    <li>
	          	<totalBleedFactor>1.10</totalBleedFactor>
		      	<naturalHealingFactor>4</naturalHealingFactor>
	          	<painFactor>0.80</painFactor>
	          	<capMods>
					<li>
		                <capacity>BloodFiltration</capacity>
		                <offset>-0.06</offset>
		            </li>
		            <li>
		          		<capacity>BloodPumping</capacity>
		                <offset>0.20</offset>
		            </li>
		            <li>
		                <capacity>Metabolism</capacity>
		                <offset>0.25</offset>
		            </li>
		            <li>
		                <capacity>Breathing</capacity>
		                <offset>0.15</offset>
		            </li>
					<li>
		            	<capacity>ImmunityGainSpeed</capacity>
		                <offset>0.2</offset>
		            </li>
	        	</capMods>
	        </li>
		</stages>
	</HediffDef>
	
<!-- mood effects -->
	<ThoughtDef>
		<defName>MinorHealingPotionMoodEffect</defName>
	    <workerClass>ThoughtWorker_Hediff</workerClass>
	    <hediff>MinorHealingPotionEffect</hediff>
	    <validWhileDespawned>true</validWhileDespawned>
	    <stages>
	    	<li>
	        	<label>humours out of balance</label>
	        	<description>My humours seem to be out of balance, I am angry and irritable, with a bitter taste in my mouth. It must be due to that minor healing postion I ingested.</description>
	        	<baseMoodEffect>-12</baseMoodEffect>
	      	</li>
	    </stages>
	</ThoughtDef>
</Defs>
