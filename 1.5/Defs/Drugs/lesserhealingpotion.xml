<?xml version="1.0" encoding="utf-8"?>
<Defs>

<!-- lesser healing potion -->

<ThingDef ParentName="DankPyon_DrugBase">
		<defName>Joe_LesserHealingPotion</defName>
		<label>Lesser Healing Potion</label>
		<description>Native tribespeople crafted an elixir that greatly enhances the natural healing abilities of those who consume it. However, it seems to bring about a sense of malaise in the bowels, an unsettling unease that weakens the kidneys due to increased blood pressure.</description>
		<graphicData>
			<texPath>SmallHealingPotionText</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
			<drawSize>1</drawSize>
		</graphicData>
		<equippedAngleOffset>-150</equippedAngleOffset>
		<rotatable>false</rotatable>
		<stackLimit>25</stackLimit>
		<statBases>
			<DeteriorationRate>0.5</DeteriorationRate>
			<Mass>0.3</Mass>
			<Flammability>0.5</Flammability>	
			<WorkToMake>600</WorkToMake>
      		<MarketValue>65</MarketValue>
      		<Mass>0.3</Mass>
		</statBases>
		<ingestible>
			<foodType>Fluid, Processed</foodType>
			<nurseable>true</nurseable>
			<drugCategory>Medical</drugCategory>
			<ingestSound>Ingest_Beer</ingestSound>
			<ingestHoldOffsetStanding>
				<northDefault>
					<offset>(0.18,0,0)</offset>
				</northDefault>
			</ingestHoldOffsetStanding>
			<ingestCommandString>Drink {0}</ingestCommandString>
			<ingestReportString>Drinking {0}.</ingestReportString>
			<chairSearchRadius>25</chairSearchRadius>
			<tasteThought>Joe_LesserHealingThought</tasteThought>
			<outcomeDoers>
				<li Class="IngestionOutcomeDoer_GiveHediff">
					<hediffDef>Joe_LesserHealingHediff</hediffDef>
					<severity>0.1</severity>
				</li>
			</outcomeDoers>
		</ingestible>
		<recipeMaker>
	      	<workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
	      	<workSkill>Intellectual</workSkill>
	      	<recipeUsers>
			        <li>CraftingSpot</li>
			        <li>DrugLab</li>
			        <li>DankPyon_AlchemyBench</li>
	      	</recipeUsers>
	      	<soundWorking>Recipe_Drug</soundWorking>
	      	<skillRequirements>
	        	<Intellectual>3</Intellectual>
	      	</skillRequirements>
    	</recipeMaker>
		<costList>
      		<MedicineHerbal>2</MedicineHerbal>
	    	<RawBerries>15</RawBerries>
			<DankPyon_RawHerb>2</DankPyon_RawHerb>
    	</costList>
		<comps>
      		<li Class="CompProperties_Drug">
        		<listOrder>120</listOrder>
      		</li>
    	</comps>
		<techLevel>Neolithic</techLevel>
	</ThingDef>
  
   <!-- Drug Effect -->

	<HediffDef>
		<defName>Joe_LesserHealingHediff</defName>
		<label>Lesser Healing Potion Effect</label>
		<makesSickThought>false</makesSickThought>
		<description>Native tribespeople crafted an elixir that greatly enhances the natural healing abilities of those who consume it. However, it seems to bring about a sense of malaise in the bowels, an unsettling unease that weakens the kidneys due to increased blood pressure..</description>
		<tendable>false</tendable>
		<isBad>false</isBad>
		<defaultLabelColor>(1,0,0.5)</defaultLabelColor>
		<hediffClass>HediffWithComps</hediffClass>
		<initialSeverity>1.0</initialSeverity>
		<maxSeverity>1.0</maxSeverity>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-4</severityPerDay>
				<showHoursToRecover>true</showHoursToRecover>
			</li>
		</comps>
		<stages>
			<li>
				<statOffsets>
					<totalBleedFactor>1.25</totalBleedFactor>
					<naturalHealingFactor>2</naturalHealingFactor>					
					<ImmunityGainSpeedFactor>1.10</ImmunityGainSpeedFactor>
				</statOffsets>
				<capMods>
					<li>
						<capacity>BloodFiltration</capacity>
						<offset>-0.15</offset>
					</li>
					<li>
						<capacity>BloodPumping</capacity>
						<offset>0.15</offset>
					</li>
					<li>
						<capacity>Metabolism</capacity>
						<offset>0.15</offset>
					</li>
					<li>
						<capacity>Breathing</capacity>
						<offset>0.1</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
	

<!-- mood affects -->

	<ThoughtDef>
		<defName>Joe_LesserHealingThought</defName>
		<showBubble>true</showBubble>
		<durationDays>0.25</durationDays>
		<stackLimit>1</stackLimit>
		<stages>
			<li>
				<label>malaise of the bowel</label>
				<description>A sense of malaise grips my bowel, an unsettling unease that has left me weakened. It must be due to the lesser healing potion I ingested.</description>
				<baseMoodEffect>-8</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

</Defs>







	
