<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!-- lesser healing potion -->

	<ThingDef ParentName="MakeableDrugBase">
    	<defName>LesserHealingPotion</defName>
    	<label>Lesser Healing Potion</label>
    	<description> Native tribespeople crafted an elixir that greatly enhances the natural healing abilities of those who consume it. However, it seems to bring about a sense of malaise in the bowels, an unsettling unease that weakens the kidneys due to increased blood pressure. </description>
	    <descriptionHyperlinks>
	    	<HediffDef>LesserHealingPotionEffect</HediffDef>
	    </descriptionHyperlinks>
    	<graphicData>
      		<texPath>SmallHealingPotionText</texPath>
      		<graphicClass>Graphic_StackCount</graphicClass>
	    	<drawSize>1</drawSize>
    	</graphicData>
	    <rotatable>false</rotatable>
	    <statBases>
    		<WorkToMake>600</WorkToMake>
      		<MarketValue>65</MarketValue>
      		<SellPriceFactor>0.30</SellPriceFactor>
      		<Mass>0.01</Mass>
    	</statBases>
		<techLevel>Neolithic</techLevel>
    	<ingestible>
      		<drugCategory>Medical</drugCategory>
      		<foodType>Processed, Fluid</foodType>
      		<outcomeDoers>
        		<li Class="IngestionOutcomeDoer_GiveHediff">
          			<hediffDef>LesserHealingPotionEffect</hediffDef>
          			<severity>1.0</severity>
        		</li>
      		</outcomeDoers>
    	</ingestible>	 
    	<recipeMaker>
	      	<workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
	      	<workSkill>Intellectual</workSkill>
	      	<recipeUsers>
			        <li>CraftingSpot</li>
			        <li>DrugLab</li>
			        <li>DankPyon_AlchemyBench</li>
	      	</recipeUsers>
	      	<soundWorking>Recipe_Drug</soundWorking>
	      	<skillRequirements>
	        	<Intellectual>3</Intellectual>
	      	</skillRequirements>
    	</recipeMaker>
		<costList>
      		<MedicineHerbal>2</MedicineHerbal>
	    	<RawBerries>15</RawBerries>
			<DankPyon_RawHerb>2</DankPyon_RawHerb>
    	</costList>
	  	<comps>
      		<li Class="CompProperties_Drug">
        		<listOrder>120</listOrder>
      		</li>
    	</comps>
	</ThingDef>
  
   <!-- Drug Effect -->

  	<HediffDef>
    	<defName>LesserHealingPotionEffect</defName>
	    <hediffClass>Hediff_High</hediffClass>
	    <label>Lesser Healing Potion Effect</label>
	    <labelNoun>Lesser Healing Potion Effect</labelNoun>
	    <description> Native tribespeople crafted an elixir that greatly enhances the natural healing abilities of those who consume it. However, it seems to bring about a sense of malaise in the bowels, an unsettling unease that weakens the kidneys due to increased blood pressure. </description>
	    <defaultLabelColor>(1,0,0.5)</defaultLabelColor>
	    <scenarioCanAdd>true</scenarioCanAdd>
	    <maxSeverity>1.0</maxSeverity>
	    <isBad>false</isBad>
	    <comps>
      		<li Class="HediffCompProperties_SeverityPerDay">
        		<severityPerDay>-4</severityPerDay>
        		<showHoursToRecover>true</showHoursToRecover>
      		</li>
    	</comps>
      	<stages>
			<li>
         		<totalBleedFactor>1.25</totalBleedFactor>
	        	<naturalHealingFactor>2</naturalHealingFactor>
          		<painFactor>0.90</painFactor>
            	<capMods>
			        <li>
                		<capacity>BloodFiltration</capacity>
                		<offset>-0.12</offset>
              		</li>
              		<li>
                		<capacity>BloodPumping</capacity>
                		<offset>0.12</offset>
              		</li>
              		<li>
                		<capacity>Metabolism</capacity>
                		<offset>0.15</offset>
              		</li>
              		<li>
                		<capacity>Breathing</capacity>
                		<offset>0.10</offset>
              		</li>
					<li>
                    <capacity>ImmunityGainSpeed</capacity>
                    <offset>0.1</offset>
                </li>
            	</capMods>
        	</li>
      </stages>
  </HediffDef>

<!-- mood affects -->

  <ThoughtDef>
  	<defName>LesserHealingPotionMoodEffect</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>LesserHealingPotionEffect</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>malaise of the bowel</label>
        <description>A sense of malaise grips my bowels, an unsettling unease that has left me weakened. It must be due to the lesser healing potion I ingested.</description>
        <baseMoodEffect>-8</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

</Defs>
