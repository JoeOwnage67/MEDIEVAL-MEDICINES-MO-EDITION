		<jobString>Making luminara extract.</jobString>
		<workAmount>600</workAmount>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>DankPyon_RawLuminara</li>						
					</thingDefs>
				</filter>
				<count>3</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
