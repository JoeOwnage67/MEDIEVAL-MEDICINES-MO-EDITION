<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!--========== LuminaraBloom ==========-->
	<ThingDef ParentName="HealrootBase" Name="DankPyon_LuminaraBase">
		<defName>DankPyon_Plant_Luminara</defName>
		<label>luminara bloom</label>
		<graphicData>
			<texPath>Plants/LuminaraBloom</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<description>The Luminara Bloom is a mesmerizing and radiant flower, celebrated for its luminous beauty and potent magical essence. This extraordinary plant features large, luminescent petals that emit a gentle, azure glow, reminiscent of the vibrant blue hue of a mana potion. The petals are a striking blue, with intricate patterns that seem to pulse with magical energy.</description>
		<plant>
			<immatureGraphicPath>Plants/MindwortPlant</immatureGraphicPath>
			<growDays>7</growDays>
			<sowWork>800</sowWork>
			<sowMinSkill>8</sowMinSkill>
			<sowTags>
				<li>Ground</li>
				<li>Hydroponic</li>
			</sowTags>
			<harvestedThingDef>DankPyon_RawLuminara</harvestedThingDef>
			<purpose>Health</purpose>
		</plant>
		<comps>
			<li Class="CompProperties_Glower">
				<glowColor>(0.5, 0.5, 1.0, 1.0)</glowColor> <!-- Light blue color -->
				<glowRadius>1</glowRadius> <!-- Radius of the glow -->
				<overlightRadius>0</overlightRadius> <!-- Radius of overlight (optional) -->
			</li>
  		</comps>
	</ThingDef>

	<ThingDef ParentName="DankPyon_LuminaraBase">
		<defName>DankPyon_Plant_LuminaraWild</defName>
		<label>wild luminara bloom</label>
		<description>The Luminara Bloom is a mesmerizing and radiant flower, celebrated for its luminous beauty and potent magical essence. This extraordinary plant features large, luminescent petals that emit a gentle, azure glow, reminiscent of the vibrant blue hue of a mana potion. The petals are a striking blue, with intricate patterns that seem to pulse with magical energy.</description>
		<neverMultiSelect>false</neverMultiSelect>
		<plant>
			<wildClusterRadius>4</wildClusterRadius>
			<wildClusterWeight>80</wildClusterWeight>
			<growDays>10</growDays>

			<sowWork Inherit="False"/>
			<sowMinSkill Inherit="False"/>
			<sowTags Inherit="False"/>
			<purpose Inherit="False"/>
		</plant>
	</ThingDef>

	<ThingDef ParentName="ResourceBase">
		<defName>DankPyon_RawLuminara</defName>
		<label>raw luminara</label>
		<description>raw luminara</description>
		<graphicData>
			<texPath>Plants/RawLuminara</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<thingCategories>
			<li>ResourcesRaw</li>
		</thingCategories>
		<statBases>
			<MarketValue>1</MarketValue>
			<Mass>0.03</Mass>
			<Flammability>1.5</Flammability>
		</statBases>
	</ThingDef>

	<ThingDef ParentName="ResourceBase">
		<defName>DankPyon_LuminaraExtract</defName>
		<label>luminara extract</label>
		<description>A concentrated mixture of luminara essence extracted by grinding raw luminara bloom. Used in the creation of mana potions.</description>
		<possessionCount>3</possessionCount>
		<graphicData>
			<texPath>Resources/LuminaraExtract</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
			<drawSize>1</drawSize>
		</graphicData>
		<techLevel>Neolithic</techLevel>
		<statBases>
			<Mass>0.35</Mass>
			<Flammability>1.3</Flammability>
			<DeteriorationRate>6</DeteriorationRate>
			<WorkToMake>400</WorkToMake>
			<MarketValue>50</MarketValue>
		</statBases>
		<tickerType>Rare</tickerType>
		<comps>
			<li Class="CompProperties_Rottable">
				<daysToRotStart>150</daysToRotStart>
				<rotDestroys>true</rotDestroys>
			</li>
		</comps>

		<costList>
			<DankPyon_RawLuminara>3</DankPyon_RawLuminara>
		</costList>

		<recipeMaker>
			<workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<recipeUsers>
				<li>DankPyon_AlchemyBench</li>
			</recipeUsers>
			<researchPrerequisite>DankPyon_Alchemy</researchPrerequisite>
			<bulkRecipeCount>4</bulkRecipeCount>
			<displayPriority>2000</displayPriority>
		</recipeMaker>
		<allowedArchonexusCount>10</allowedArchonexusCount>
	</ThingDef>



	<RecipeDef ParentName="DankPyon_Make_DrugAlchemy">
