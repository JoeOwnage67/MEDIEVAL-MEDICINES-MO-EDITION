			</thingDefs>
		</defaultIngredientFilter>
		<recipeUsers>
			<li>DankPyon_HerbTable</li>
		</recipeUsers>
		<products>
			<DankPyon_LuminaraExtract>1</DankPyon_LuminaraExtract>
		</products>
	</RecipeDef>

