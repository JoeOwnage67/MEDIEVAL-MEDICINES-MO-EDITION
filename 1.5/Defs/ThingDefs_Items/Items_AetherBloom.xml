<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!--========== Aether Bloom ==========-->
	<ThingDef MayRequire="Ludeon.RimWorld.Royalty" ParentName="HealrootBase" Name="DankPyon_AetherBase">
		<defName>DankPyon_Plant_Aether</defName>
		<label>aether bloom</label>
		<graphicData>
			<texPath>Plants/AetherBloom</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<description>The Aether Bloom is a mesmerizing and radiant flower, celebrated for its luminous beauty and potent magical essence. This extraordinary plant features large, luminescent petals that emit a gentle, azure glow, reminiscent of the vibrant blue hue of a mana potion. The petals are a striking blue, with intricate patterns that seem to pulse with magical energy.</description>
		<plant>
			<immatureGraphicPath>Plants/AetherBloom</immatureGraphicPath>
			<growDays>7</growDays>
			<sowWork>800</sowWork>
			<sowMinSkill>8</sowMinSkill>
			<sowTags>
				<li>Ground</li>
				<li>Hydroponic</li>
			</sowTags>
			<harvestedThingDef>DankPyon_RawAether</harvestedThingDef>
			<purpose>Health</purpose>
		</plant>
		<comps>
			<li Class="CompProperties_Glower">
				<glowColor>(0.5, 0.5, 1.0, 1.0)</glowColor> <!-- Light blue color -->
				<glowRadius>1</glowRadius> <!-- Radius of the glow -->
				<overlightRadius>0</overlightRadius> <!-- Radius of overlight (optional) -->
			</li>
  		</comps>
	</ThingDef>

	<ThingDef MayRequire="Ludeon.RimWorld.Royalty" ParentName="DankPyon_AetherBase">
		<defName>DankPyon_Plant_AetherWild</defName>
		<label>wild aether bloom</label>
		<description>The Aether Bloom is a mesmerizing and radiant flower, celebrated for its luminous beauty and potent magical essence. This extraordinary plant features large, luminescent petals that emit a gentle, azure glow, reminiscent of the vibrant blue hue of a mana potion. The petals are a striking blue, with intricate patterns that seem to pulse with magical energy.</description>
		<neverMultiSelect>false</neverMultiSelect>
		<plant>
			<wildClusterRadius>4</wildClusterRadius>
			<wildClusterWeight>80</wildClusterWeight>
			<growDays>10</growDays>

			<sowWork Inherit="False"/>
			<sowMinSkill Inherit="False"/>
			<sowTags Inherit="False"/>
			<purpose Inherit="False"/>
		</plant>
	</ThingDef>

	<ThingDef MayRequire="Ludeon.RimWorld.Royalty" ParentName="ResourceBase">
		<defName>DankPyon_RawAether</defName>
		<label>raw aether</label>
		<description>raw aether</description>
		<graphicData>
			<texPath>Plants/RawAether</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<thingCategories>
			<li>ResourcesRaw</li>
		</thingCategories>
		<statBases>
			<MarketValue>1</MarketValue>
			<Mass>0.03</Mass>
			<Flammability>1.5</Flammability>
		</statBases>
	</ThingDef>

	<ThingDef MayRequire="Ludeon.RimWorld.Royalty" ParentName="ResourceBase">
		<defName>DankPyon_AetherExtract</defName>
		<label>aether extract</label>
		<description>A concentrated mixture of aether essence extracted by grinding raw aether bloom. Used in the creation of mana potions.</description>
		<possessionCount>3</possessionCount>
		<graphicData>
			<texPath>Resources/AetherExtract</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
			<drawSize>1</drawSize>
		</graphicData>
		<techLevel>Neolithic</techLevel>
		<statBases>
			<Mass>0.35</Mass>
			<Flammability>1.3</Flammability>
			<DeteriorationRate>6</DeteriorationRate>
			<WorkToMake>400</WorkToMake>
			<MarketValue>50</MarketValue>
		</statBases>
		<tickerType>Rare</tickerType>
		<comps>
			<li Class="CompProperties_Rottable">
				<daysToRotStart>150</daysToRotStart>
				<rotDestroys>true</rotDestroys>
			</li>
		</comps>

		<costList>
			<DankPyon_RawAether>3</DankPyon_RawAether>
		</costList>

		<recipeMaker>
			<workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<recipeUsers>
				<li>DankPyon_AlchemyBench</li>
			</recipeUsers>
			<researchPrerequisite>DankPyon_Alchemy</researchPrerequisite>
			<bulkRecipeCount>4</bulkRecipeCount>
			<displayPriority>2000</displayPriority>
		</recipeMaker>
		<allowedArchonexusCount>10</allowedArchonexusCount>
	</ThingDef>



	<RecipeDef MayRequire="Ludeon.RimWorld.Royalty" ParentName="DankPyon_Make_DrugAlchemy">
		<defName>DankPyon_Make_AetherExtract</defName>
		<label>make aether extract</label>
		<description>Make aether extract.</description>
		<jobString>Making aether extract.</jobString>
		<workAmount>600</workAmount>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>DankPyon_RawAether</li>						
					</thingDefs>
				</filter>
				<count>3</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>DankPyon_RawAether</li>
			</thingDefs>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<thingDefs>
				<li>DankPyon_RawAether</li>
			</thingDefs>
		</defaultIngredientFilter>
		<recipeUsers>
			<li>DankPyon_HerbTable</li>
		</recipeUsers>
		<products>
			<DankPyon_AetherExtract>1</DankPyon_AetherExtract>
		</products>
	</RecipeDef>

		<RecipeDef MayRequire="Ludeon.RimWorld.Royalty" ParentName="DankPyon_Make_DrugAlchemy">
		<defName>DankPyon_Make_AetherExtractBulk</defName>
		<label>make aether extract x5</label>
		<description>Make aether extract x5.</description>
		<jobString>Making aether extract x5.</jobString>
		<workAmount>3000</workAmount>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>DankPyon_RawAether</li>
					</thingDefs>
				</filter>
				<count>15</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>DankPyon_RawAether</li>
			</thingDefs>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<thingDefs>
				<li>DankPyon_RawAether</li>
			</thingDefs>
		</defaultIngredientFilter>
		<recipeUsers>
			<li>DankPyon_HerbTable</li>
		</recipeUsers>
		<products>
			<DankPyon_AetherExtract>5</DankPyon_AetherExtract>
		</products>
	</RecipeDef>

	<RecipeDef MayRequire="Ludeon.RimWorld.Royalty" ParentName="DankPyon_Make_DrugAlchemy">
		<defName>DankPyon_Make_AetherExtractBulkExtra</defName>
		<label>make aether extract x10</label>
		<description>Make aether extract x10.</description>
		<jobString>Making aether extract x10.</jobString>
		<workAmount>6000</workAmount>
		<ingredients>
			<li>
				<filter>
